{
    "C_Cpp.updateChannel": "Insiders", // Update policy of c/c++ extension
    "[c]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 8,
        "editor.insertSpaces": false,
        "editor.rulers": [80]
    },
    "files.exclude": {
        "**/.git": false,
        "**/.git*": true,
        "**/.tmp*": true,
        "**/*.cmd": true,
        "**/*.d": true,
        "**/*.ko": true,
        "**/*.mod*": true,
        "**/*.o": true,
        "**/*.S": true,
        "**/cscope*": true,
        "**/Module*": true,
        "**/modules*": true,
        "**/System.map": true,
        "**/tags": true,
        "**/vmlinux*": true
      }
}